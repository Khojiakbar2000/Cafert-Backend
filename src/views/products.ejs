<%- include('includes/header') %>
<link rel="stylesheet" type="text/css" href="/css/header.css" />
<link rel="stylesheet" type="text/css" href="/css/products.css" />

<body>
  <div class="products-container">
    <div class="restaurant-menu-frame">
      <div class="board">
        <!-- Header Section -->
        <div class="page-header">
          <h1 class="page-title">Restaurant Menu</h1>
          <button class="btn btn-primary new-product-btn" id="process-btn">
            <i class="fas fa-plus"></i>
            New Product
          </button>
        </div>

        <!-- Products Table -->
        <div class="table-container">
          <table class="table table-bordered table-hover products-table">
            <thead class="table-header">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Product Name</th>
                <th scope="col">Type</th>
                <th scope="col">Volume/Size</th>
                <th scope="col">Price</th>
                <th scope="col">Stock</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody>
              <% products.map(function(value, key){ %> 
                <tr class="product-row">
                  <td class="row-number"><%= key + 1 %></td>
                  <td class="product-name-cell"><%= value.productName %></td>
                  <td class="product-type-cell"><%= value.productCollection %></td>
                  <td class="product-volume-cell">
                    <%= value.productCollection === 'DRINK' ? value.productVolume : value.productSize %>
                  </td>
                  <td class="product-price-cell">$<%= value.productPrice %></td>
                  <td class="product-stock-cell"><%= value.productLeftCount %></td>
                  <td class="product-status-cell">
                    <select class="status-select" id="<%= value._id %>">
                      <option value="PAUSE" <%= value.productStatus === 'PAUSE' ? 'selected': '' %>>Pause</option>
                      <option value="PROCESS" <%= value.productStatus === 'PROCESS' ? 'selected': '' %>>Process</option>
                      <option value="DELETE" <%= value.productStatus === 'DELETE' ? 'selected': '' %>>Delete</option>
                    </select>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <!-- New Product Form -->
        <form
          class="new-product-form"
          style="display: none;"
          onsubmit="return validateForm()"
          action="/admin/product/create"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="form-header">
            <h2 class="form-title">New Product Details</h2>
          </div>

          <!-- Basic Information -->
          <div class="form-section">
            <h3 class="section-title">Basic Information</h3>
            
            <div class="form-row">
              <div class="form-group full-width">
                <label class="form-label">Product Name</label>
                <input
                  type="text"
                  placeholder="Enter product name"
                  name="productName"
                  class="form-control product-name"
                  required
                />
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label class="form-label">Product Price</label>
                <div class="input-with-icon">
                  <i class="fas fa-dollar-sign"></i>
                  <input
                    type="number"
                    placeholder="0"
                    name="productPrice"
                    class="form-control product-price"
                    step="1"
                    min="0"
                    required
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="form-label">Stock Count</label>
                <div class="input-with-icon">
                  <i class="fas fa-boxes"></i>
                  <input
                    type="number"
                    placeholder="0"
                    name="productLeftCount"
                    class="form-control product-left-count"
                    min="0"
                    required
                  />
                </div>
              </div>
            </div>
          </div>

          <!-- Product Type and Size -->
          <div class="form-section">
            <h3 class="section-title">Product Classification</h3>
            
            <div class="form-row">
              <div class="form-group">
                <label class="form-label">Product Type</label>
                <select class="form-control product-collection" name="productCollection">
                  <option value="DISH" selected>Dish</option>
                  <option value="SALAD">Salad</option>
                  <option value="DESSERT">Dessert</option>
                  <option value="DRINK">Drink</option>
                  <option value="COFFEE">Coffee</option>
                  <option value="OTHER">Other</option>
                </select>
              </div>

              <div class="form-group" id="product-collection">
                <label class="form-label">Dish Size</label>
                <select class="form-control product-size" name="productSize">
                  <option value="SMALL">Small</option>
                  <option value="NORMAL" selected>Normal</option>
                  <option value="LARGE">Large</option>
                  <option value="SET">Set</option>
                </select>
              </div>

              <div class="form-group" id="product-volume" style="display: none">
                <label class="form-label">Drink Volume</label>
                <select class="form-control product-volume" name="productVolume">
                  <option value="0.5">0.5 liters</option>
                  <option value="1" selected>1 liter</option>
                  <option value="1.2">1.2 liters</option>
                  <option value="1.5">1.5 liters</option>
                  <option value="2">2 liters</option>
                </select>
              </div>
            </div>
          </div>

          <!-- Description -->
          <div class="form-section">
            <h3 class="section-title">Product Description</h3>
            <div class="form-group full-width">
              <label class="form-label">Description</label>
              <textarea 
                name="productDesc" 
                class="form-control product-desc"
                placeholder="Enter product description..."
                rows="4"
              ></textarea>
            </div>
          </div>

          <!-- Product Images -->
          <div class="form-section">
            <h3 class="section-title">Product Images</h3>
            <div class="image-upload-grid">
              <% for (let i = 1; i <= 5; i++) { %>
                <div class="upload-img-box">
                  <img src="/img/upload.svg" id="image-preview-<%= i %>" class="preview-image" />
                  <input
                    type="file"
                    name="productImages"
                    class="image-input"
                    accept="image/*"
                    <%- `onchange="previewFileHandler(this, ${i})"` %>

                    <%= i === 1 ? 'required' : '' %>
                  />
                </div>
                
              <% } %>
            </div>
            <input name="restaurantIid" class="restaurant-id" hidden />
          </div>
          
            
     

          <!-- Form Actions -->
          <div class="form-actions">
            <button type="button" class="btn btn-secondary" id="cancel-btn">
              <i class="fas fa-times"></i>
              Cancel
            </button>
            <button type="submit" class="btn btn-primary" id="create-btn">
              <i class="fas fa-save"></i>
              Create Product
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <%- include('includes/footer') %>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="/js/products.js"></script>
</body>







  




