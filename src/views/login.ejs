<!-- Enhanced Admin Login Styles -->
<style>
    :root {
        --cafert-primary: #8B4513;
        --cafert-secondary: #D2691E;
        --cafert-accent: #FFD700;
        --cafert-dark: #2C1810;
        --cafert-light: #FFF8F0;
        --cafert-text: #2C1810;
        --cafert-text-light: #6B4423;
        --cafert-border: #E8D5C4;
        --cafert-success: #28a745;
        --cafert-warning: #ffc107;
        --cafert-danger: #dc3545;
        --cafert-info: #17a2b8;
        --cafert-gradient: linear-gradient(135deg, #8B4513 0%, #D2691E 50%, #CD853F 100%);
        --cafert-shadow: 0 8px 32px rgba(139, 69, 19, 0.15);
        --cafert-shadow-hover: 0 15px 45px rgba(139, 69, 19, 0.25);
    }
    
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, var(--cafert-light) 0%, #FDF6F0 50%, #FFF8F0 100%);
        color: var(--cafert-text);
        min-height: 100vh;
        position: relative;
        overflow-x: hidden;
    }
    
    /* Enhanced Background Pattern */
    .coffee-pattern {
        background-image: 
            radial-gradient(circle at 25% 25%, rgba(139, 69, 19, 0.03) 0%, transparent 50%),
            radial-gradient(circle at 75% 75%, rgba(210, 105, 30, 0.03) 0%, transparent 50%),
            url("data:image/svg+xml,%3Csvg width='80' height='80' viewBox='0 0 80 80' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%238B4513' fill-opacity='0.03'%3E%3Cpath d='M40 40c0-11.046-8.954-20-20-20s-20 8.954-20 20 8.954 20 20 20 20-8.954 20-20zm0 0c0 11.046 8.954 20 20 20s20-8.954 20-20-8.954-20-20-20-20 8.954-20 20z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        opacity: 0.4;
        animation: float 20s ease-in-out infinite;
    }
    
    @keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(1deg); }
    }
    
    /* Enhanced Login Container */
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        position: relative;
    }
    
    .login-frame {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 24px;
        box-shadow: var(--cafert-shadow);
        border: 1px solid rgba(139, 69, 19, 0.1);
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        backdrop-filter: blur(20px);
        position: relative;
        max-width: 500px;
        width: 100%;
    }
    
    .login-frame::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 6px;
        background: var(--cafert-gradient);
    }
    
    .login-frame:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: var(--cafert-shadow-hover);
    }
    
    /* Enhanced Login Header */
    .login-header {
        background: var(--cafert-gradient);
        color: white;
        padding: 3rem 2.5rem 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }
    
    .login-header::after {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 120px;
        height: 120px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        transform: translate(40px, -40px);
    }
    
    .login-header::before {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        transform: translate(-20px, 20px);
    }
    
    .logo-section {
        position: relative;
        z-index: 2;
    }
    
    .coffee-logo {
        font-size: 4rem;
        margin-bottom: 1.5rem;
        animation: float 3s ease-in-out infinite;
    }
    
    .coffee-logo i {
        color: var(--cafert-accent);
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }
    
    .login-header h1 {
        font-family: 'Playfair Display', serif;
        font-weight: 700;
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        position: relative;
        z-index: 2;
    }
    
    .subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
        position: relative;
        z-index: 2;
    }
    
    /* Navigation Links */
    .navigation-links {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 2rem;
        position: relative;
        z-index: 2;
    }
    
    .back-link {
        color: rgba(255, 255, 255, 0.9);
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.1);
    }
    
    .back-link:hover {
        color: var(--cafert-accent);
        background: rgba(255, 255, 255, 0.2);
        transform: translateY(-2px);
    }
    
    .signup-prompt {
        color: rgba(255, 255, 255, 0.9);
        font-size: 0.9rem;
    }
    
    .signup-link {
        color: var(--cafert-accent);
        text-decoration: none;
        font-weight: 600;
        margin-left: 0.5rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
    }
    
    .signup-link:hover {
        color: white;
        transform: translateY(-1px);
    }
    
    /* Enhanced Input Container */
    .login-input-frame {
        padding: 3rem 2.5rem;
    }
    
    .login-input-container {
        margin-bottom: 2rem;
        position: relative;
    }
    
    .login-input-container label {
        font-weight: 700;
        color: var(--cafert-text);
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.1rem;
        position: relative;
    }
    
    .login-input-container label i {
        color: var(--cafert-primary);
        font-size: 1.2rem;
    }
    
    .member-nick,
    .member-password {
        border: 2px solid var(--cafert-border);
        border-radius: 16px;
        padding: 1.25rem 1.5rem;
        font-size: 1.1rem;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        position: relative;
        width: 100%;
    }
    
    .member-nick:focus,
    .member-password:focus {
        border-color: var(--cafert-primary);
        box-shadow: 0 0 0 0.25rem rgba(139, 69, 19, 0.15);
        outline: none;
        transform: translateY(-2px);
        background: white;
    }
    
    .member-nick::placeholder,
    .member-password::placeholder {
        color: var(--cafert-text-light);
        opacity: 0.7;
    }
    
    /* Password Input Group */
    .password-input-group {
        position: relative;
    }
    
    .password-toggle {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: var(--cafert-text-light);
        cursor: pointer;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        z-index: 10;
        padding: 0.5rem;
        border-radius: 50%;
    }
    
    .password-toggle:hover {
        color: var(--cafert-primary);
        background: rgba(139, 69, 19, 0.1);
        transform: translateY(-50%) scale(1.1);
    }
    
    /* Enhanced Login Button */
    .login-btn {
        background: var(--cafert-gradient);
        border: none;
        color: white;
        font-weight: 700;
        padding: 1.25rem 2.5rem;
        border-radius: 16px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        position: relative;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(139, 69, 19, 0.3);
        width: 100%;
        font-size: 1.1rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-top: 1rem;
    }
    
    .login-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.6s;
    }
    
    .login-btn:hover::before {
        left: 100%;
    }
    
    .login-btn:hover {
        transform: translateY(-3px) scale(1.02);
        box-shadow: 0 15px 40px rgba(139, 69, 19, 0.4);
        color: white;
    }
    
    .login-btn:active {
        transform: translateY(-1px) scale(0.98);
    }
    
    /* Loading State */
    .login-btn.loading {
        pointer-events: none;
        opacity: 0.8;
    }
    
    .login-btn.loading::after {
        content: '';
        width: 20px;
        height: 20px;
        border: 2px solid transparent;
        border-top: 2px solid white;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin-left: 0.5rem;
    }
    
    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
    
    /* Floating Animation */
    .float-animation {
        animation: float 6s ease-in-out infinite;
    }
    
    /* Pulse Animation */
    .pulse-animation {
        animation: pulse 2s ease-in-out infinite;
    }
    
    @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }
    
    /* Enhanced Responsive Design */
    @media (max-width: 768px) {
        .login-container {
            padding: 1rem;
        }
        
        .login-frame {
            margin: 1rem;
        }
        
        .login-header {
            padding: 2rem 1.5rem 1.5rem;
        }
        
        .login-input-frame {
            padding: 2rem 1.5rem;
        }
        
        .login-header h1 {
            font-size: 2rem;
        }
        
        .coffee-logo {
            font-size: 3rem;
        }
        
        .navigation-links {
            flex-direction: column;
            gap: 1rem;
            align-items: stretch;
        }
        
        .back-link,
        .signup-prompt {
            text-align: center;
        }
    }
</style>

<div class="coffee-pattern"></div>

<body>
    <form class="login-container" action="/admin/login" method="POST" autocomplete="off" id="loginForm">
        <div class="login-frame">
            <div class="login-header">
                <div class="logo-section">
                    <div class="coffee-logo">
                        <i class="fas fa-coffee float-animation"></i>
                    </div>
                    <h1>Welcome Back</h1>
                    <p class="subtitle">Sign in to manage your coffee shop</p>
                </div>
                <div class="navigation-links">
                    <a href="/admin" class="back-link">
                        <i class="fas fa-arrow-left"></i> Back to Home
                    </a>
                    <div class="signup-prompt">
                        Not registered yet?
                        <a href="/admin/signup" class="signup-link">
                            <i class="fas fa-user-plus"></i> Signup
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="login-input-frame">
                <!-- Alert Messages -->
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger" style="
                        background: rgba(220, 53, 69, 0.1);
                        color: var(--cafert-danger);
                        border: none;
                        border-radius: 16px;
                        padding: 1rem 1.5rem;
                        margin-bottom: 2rem;
                        border-left: 4px solid var(--cafert-danger);
                    ">
                        <i class="fas fa-exclamation-triangle"></i>
                        <%= error %>
                    </div>
                <% } %>
                
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="alert alert-success" style="
                        background: rgba(40, 167, 69, 0.1);
                        color: var(--cafert-success);
                        border: none;
                        border-radius: 16px;
                        padding: 1rem 1.5rem;
                        margin-bottom: 2rem;
                        border-left: 4px solid var(--cafert-success);
                    ">
                        <i class="fas fa-check-circle"></i>
                        <%= success %>
                    </div>
                <% } %>
                
                <div class="login-input-container">
                    <label for="memberNick">
                        <i class="fas fa-user"></i> Username
                    </label>
                    <input
                        type="text"
                        id="memberNick"
                        name="memberNick"
                        class="member-nick"
                        placeholder="Enter your username"
                        value=""
                        required
                        autocomplete="username"
                    />
                </div>
                
                <div class="login-input-container">
                    <label for="memberPassword">
                        <i class="fas fa-lock"></i> Password
                    </label>
                    <div class="password-input-group">
                        <input
                            type="password"
                            id="memberPassword"
                            name="memberPassword"
                            class="member-password"
                            placeholder="Enter your password"
                            value=""
                            required
                            autocomplete="current-password"
                        />
                        <button type="button" class="password-toggle" onclick="togglePassword('memberPassword')">
                            <i class="fas fa-eye" id="passwordIcon"></i>
                        </button>
                    </div>
                </div>
                
                <button class="login-btn btn btn-primary" name="login" type="submit" id="loginBtn">
                    <i class="fas fa-sign-in-alt"></i> Sign In
                </button>
            </div>
        </div>
    </form>
    
    <script>
        // Enhanced Password visibility toggle
        function togglePassword(id) {
            const input = document.getElementById(id);
            const icon = document.getElementById('passwordIcon');
            
            if (input.type === "password") {
                input.type = "text";
                icon.className = "fas fa-eye-slash";
            } else {
                input.type = "password";
                icon.className = "fas fa-eye";
            }
        }
        
        // Form Submission with Loading State
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            const submitBtn = document.getElementById('loginBtn');
            submitBtn.classList.add('loading');
            submitBtn.innerHTML = '<i class="fas fa-spinner"></i> Signing In...';
        });
        
        // Enhanced Form Validation
        document.getElementById('memberNick').addEventListener('input', function(e) {
            const value = e.target.value;
            if (value.length < 3) {
                e.target.style.borderColor = 'var(--cafert-danger)';
            } else {
                e.target.style.borderColor = 'var(--cafert-success)';
            }
        });
        
        document.getElementById('memberPassword').addEventListener('input', function(e) {
            const value = e.target.value;
            if (value.length < 1) {
                e.target.style.borderColor = 'var(--cafert-danger)';
            } else {
                e.target.style.borderColor = 'var(--cafert-success)';
            }
        });
        
        // Auto-focus on first input
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('memberNick').focus();
        });
    </script>
</body>

<%- include('includes/footer') %>
